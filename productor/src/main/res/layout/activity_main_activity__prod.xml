<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity_Prod">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 1"
        android:id="@+id/LED1"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:textOn="LED1"
            android:textOff="LED1" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 2"
            android:id="@+id/LED2"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textOff="LED 2"
            android:textOn="LED 2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 3"
            android:id="@+id/LED3"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textOff="LED 3"
            android:textOn="LED 3" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 4"
            android:id="@+id/LED4"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textOff="LED 4"
            android:textOn="LED 4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potenciometro"
            android:id="@+id/textView"

            android:layout_alignBottom="@+id/seekBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Potenciometro"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

</RelativeLayout>
